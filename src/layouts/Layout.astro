---
// Layout.astro - Main layout component for the application
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/bg3-icon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <div id="root">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  /* Import global styles */
  @import "../styles/theme.css";
  @import "../styles/customStyles.css";
  @import "../styles/modal.css";
</style>
