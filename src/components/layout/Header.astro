---
// Header.astro - Header component for the application
interface Props {
  title?: string;
}

const { title = "BG3 Decision Tree" } = Astro.props;
---

<header class="header">
  <div class="header-content">
    <h1>{title}</h1>
    <nav class="header-nav">
      <ul>
        <li><a href="/" class="active">Home</a></li>
        <li><a href="https://github.com/kiliantyler/BG3-Decision-Tree" target="_blank">GitHub</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: var(--background);
    border-bottom: 1px solid var(--border);
    padding: 0.5rem 1rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    font-size: 1.5rem;
    margin: 0;
    color: var(--purple);
  }

  .header-nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.5rem;
  }

  .header-nav a {
    color: var(--foreground);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .header-nav a:hover,
  .header-nav a.active {
    color: var(--purple);
  }
</style>
