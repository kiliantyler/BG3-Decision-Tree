---
// ErrorState.astro - Error state component for the application
interface Props {
  errorMessage: string;
  onRetry?: () => void;
}

const { errorMessage } = Astro.props;
---

<div class="error-container">
  <h3>Error loading data</h3>
  <p>{errorMessage}</p>
  <button id="retry-button" class="retry-button">
    Retry
  </button>
</div>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    color: #d32f2f;
  }

  .retry-button {
    padding: 8px 16px;
    background-color: #2196f3;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .retry-button:hover {
    background-color: #1976d2;
  }
</style>

<script>
  // Client-side script to handle the retry button click
  document.getElementById('retry-button')?.addEventListener('click', () => {
    // Reload the page to retry
    window.location.reload();
  });
</script>
