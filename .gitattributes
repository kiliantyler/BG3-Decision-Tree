# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Explicitly declare text files to be normalized
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.svg text eol=lf
*.txt text eol=lf
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.prettierrc text eol=lf
.eslintrc* text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.avif binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary
*.mp4 binary
*.webm binary
*.mp3 binary
*.wav binary
*.ogg binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.rar binary
*.7z binary

# Treat SVGs as text files for diff purposes but binary for merges
*.svg text diff=svg merge=binary

# Handle package-lock.json and yarn.lock specially
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true
