{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "contexts/*": [
        "src/contexts/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "data/*": [
        "src/data/*"
      ],
      "styles/*": [
        "src/styles/*"
      ]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
